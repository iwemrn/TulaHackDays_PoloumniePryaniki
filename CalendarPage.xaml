<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.CalendarPage"
             Title="Календарь">

    <StackLayout Padding="10">
        <Label Text="Добавление событий в календарь" FontSize="20" HorizontalOptions="Center" />

        <Entry x:Name="EventNameEntry" Placeholder="Название события" />
        <DatePicker x:Name="EventDatePicker" />
        <TimePicker x:Name="EventStartTimePicker" />
        <TimePicker x:Name="EventEndTimePicker" />

        <Button Text="Добавить событие" Clicked="OnAddEventClicked" />
        <Label x:Name="StatusLabel" Text="" TextColor="Green" HorizontalOptions="Center" />
    </StackLayout>

</ContentPage>