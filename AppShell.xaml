<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiApp1.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiApp1"
    xmlns:pages="clr-namespace:MauiApp1.Pages"
    Shell.FlyoutBehavior="Disabled"
    Title="MauiApp1">
    <!-- Таббар для навигации между вкладками -->
    <TabBar>
        <!-- Вкладка "Показатели" -->
        <ShellContent Title="Показатели" Icon="calendar.svg" Route="calendar">
            <pages:CalendarPage />
        </ShellContent>

        <!-- Вкладка "Таблетки" -->
        <ShellContent Title="Таблетки" Icon="pills.svg" Route="pills">
            <pages:PillsPage />
        </ShellContent>

        <!-- Вкладка "Рекомендации" -->
        <ShellContent Title="Рекомендация" Icon="recommendation.svg" Route="notes">
            <pages:NotesPage />
        </ShellContent>

        <!-- Вкладка "Личный кабинет" -->
        <ShellContent Title="Личный кабинет" Icon="user.svg" Route="user">
            <pages:ProfilPage />
        </ShellContent>
    </TabBar>
</Shell>
